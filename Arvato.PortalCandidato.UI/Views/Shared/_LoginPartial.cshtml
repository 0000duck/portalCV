@using Microsoft.AspNet.Identity

<div class="nav-no-collapse pull-right" id="header-nav">
    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()



            <ul class="nav navbar-nav pull-right">
                @*<li class="hidden-xxs">
                    <label class="hidden-xs">PRE</label>
                </li>*@
                <li class="hidden-xs">
                    <a class="btn dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-warning"></i>
                        <span class="count js-numAlertas hide"></span>
                    </a>
                </li>
                <li class="hidden-xxs">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-user-o" aria-hidden="true"></i>
                    </a>
                </li>
                <li class="hidden-xxs">
                    <label class="hidden-xs">@User.Identity.GetUserName()</label>
                </li>

                @if (User.Identity.GetEsEstructura())
                {
                <li class="hidden-xs" >
                    @*<a class="btn" href="http://srvspointcde.crmsalamanca.arvato.iberia/barvato/excelenzia_sp/_layouts/15/start.aspx#/" target="_blank">*@
                    <a class="btn" href="https://spglobaltq.arvatocrm.es/barvato/excelenzia_sp/_layouts/15/start.aspx#/" target="_blank">
                       

                        <i class="fa fa-question-circle-o"></i>

                    </a>
                </li>
                }
                <li class="hidden-xxs">
                    <a class="btn" href="javascript:document.getElementById('logoutForm').submit()">
                        <i class="fa fa-power-off"></i>
                    </a>
                </li>
            </ul>
        }
    }
    else
    {
        <ul class="nav navbar-nav pull-right">
            <li class="hidden-xxs">@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
            <li class="hidden-xxs">@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        </ul>
    }

</div>

