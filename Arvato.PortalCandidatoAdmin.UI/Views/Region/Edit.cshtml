@model Arvato.PortalCandadato.Shared.DTO.RegionDTO

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>



@*@using (Html.BeginForm( new { @id = "formulario" }))*@

@using (Ajax.BeginForm("Edit", "Region", new AjaxOptions { HttpMethod = "Post" }, new { @id = "formulario" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <h4>@Resources.Language.editar_regiones</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)




            <div class="form-group">
                <label class="control-label col-md-2"> @Resources.Language.sede:</label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.SedeName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.SedeName)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2"> @Resources.Language.regiones:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RegionName, new { htmlAttributes = new { @class = "form-control", @id = "IdNombreRegion" } })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2"> @Resources.Language.email:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control",@id= "IdEmailRegion" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2 col-md-10">
                    <input type="button" value="@Resources.Language.guardar" id="IdGuardarRegion" class="btn btn-default" />
                </div>
            </div>
        <div class="form-group">
            <div class="col-md-2 col-md-10">
                @Html.ActionLink(Resources.Language.volver, "Index")
            </div>
        </div>
  
        <div class="form-group" id="idError">
            <p class="text-danger"  >@ViewBag.error</p>
        </div>
     
        </div>
}
    


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/region");
}
